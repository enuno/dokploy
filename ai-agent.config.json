{\n  \"version\": \"1.0.0\",\n  \"project\": \"dokploy-templates-cloudflare\",\n  \"description\": \"AI agent configuration for Dokploy templates with Cloudflare integration\",\n  \"agents\": {\n    \"claude\": {\n      \"type\": \"chat-based-reasoning\",\n      \"enabled\": true,\n      \"model\": \"claude-opus-4\",\n      \"context_window\": \"200k\",\n      \"config\": {\n        \"temperature\": 0.7,\n        \"max_tokens\": 4096,\n        \"top_p\": 1.0,\n        \"system_prompt_file\": \"./CLAUDE.md\"\n      },\n      \"roles\": [\n        \"architect\",\n        \"designer\",\n        \"code-reviewer\",\n        \"problem-solver\"\n      ],\n      \"permissions\": {\n        \"file_read\": true,\n        \"file_write\": false,\n        \"command_execution\": false,\n        \"git_operations\": false,\n        \"dangerous_operations\": false\n      }\n    },\n    \"cursor\": {\n      \"type\": \"ide-integrated\",\n      \"enabled\": true,\n      \"config_file\": \".cursor/settings.json\",\n      \"rules_directory\": \".cursor/rules/\",\n      \"config\": {\n        \"model_preference\": \"claude-opus-4\",\n        \"context_window\": \"auto\",\n        \"token_budget\": 8000,\n        \"format_on_save\": true,\n        \"lint_on_save\": true\n      },\n      \"multi_agent_rules\": [\n        {\n          \"name\": \"architect-agent.mdc\",\n          \"activation\": \"@architect or *.architecture.md\",\n          \"max_size_chars\": 12000\n        },\n        {\n          \"name\": \"builder-agent.mdc\",\n          \"activation\": \"@builder or blueprints/**/*.{yml,toml}\",\n          \"max_size_chars\": 12000\n        },\n        {\n          \"name\": \"validator-agent.mdc\",\n          \"activation\": \"@validator or tests/**/*.test.ts\",\n          \"max_size_chars\": 12000\n        },\n        {\n          \"name\": \"cloudflare-expert.mdc\",\n          \"activation\": \"@cloudflare or **/*cf*.js\",\n          \"max_size_chars\": 12000\n        }\n      ],\n      \"permissions\": {\n        \"file_read\": true,\n        \"file_write\": true,\n        \"file_write_patterns\": [\n          \"blueprints/**\",\n          \"tests/**\",\n          \"docs/**\"\n        ],\n        \"command_execution\": false,\n        \"git_operations\": false\n      }\n    },\n    \"copilot\": {\n      \"type\": \"inline-suggester\",\n      \"enabled\": true,\n      \"config_file\": \"COPILOT.md\",\n      \"github_org_config\": \".github/copilot-instructions.md\",\n      \"config\": {\n        \"inline_suggestions\": true,\n        \"suggestion_debounce_ms\": 500,\n        \"max_suggestions\": 3,\n        \"language_specific\": {\n          \"yaml\": true,\n          \"toml\": true,\n          \"json\": true,\n          \"typescript\": true,\n          \"javascript\": true,\n          \"markdown\": true\n        }\n      },\n      \"learning\": {\n        \"learn_from_codebase\": true,\n        \"learn_from_history\": true,\n        \"cache_completions\": true\n      },\n      \"permissions\": {\n        \"file_read\": true,\n        \"file_write\": false,\n        \"command_execution\": false,\n        \"git_operations\": false\n      }\n    },\n    \"cline\": {\n      \"type\": \"local-mcp-executor\",\n      \"enabled\": true,\n      \"config_file\": \".clinerules\",\n      \"config\": {\n        \"sandbox_mode\": true,\n        \"max_execution_time_seconds\": 300,\n        \"max_file_size_mb\": 10,\n        \"allow_file_writes\": true,\n        \"allow_command_execution\": true\n      },\n      \"mcp_servers\": {\n        \"local\": {\n          \"type\": \"local-execution\",\n          \"capabilities\": [\"file\", \"command\", \"report\"]\n        }\n      },\n      \"custom_commands\": {\n        \"validate\": \"npm run validate:all\",\n        \"test\": \"npm run test:coverage\",\n        \"deploy\": \"npm run deploy:staging\",\n        \"cf_test\": \"npm run test:cloudflare\"\n      },\n      \"permissions\": {\n        \"file_read\": true,\n        \"file_write\": true,\n        \"file_write_patterns\": [\n          \"blueprints/**\",\n          \"tests/**\",\n          \"docs/**\",\n          \"scripts/**\"\n        ],\n        \"command_execution\": true,\n        \"allowed_commands\": [\n          \"npm run validate*\",\n          \"npm run test*\",\n          \"npm run lint*\",\n          \"npm run format*\",\n          \"npm run type-check*\",\n          \"npm run generate:meta*\",\n          \"npm run build:template*\",\n          \"npm run deploy:staging*\"\n        ],\n        \"forbidden_commands\": [\n          \"npm install -g*\",\n          \"sudo*\",\n          \"rm -rf*\",\n          \"git push*\",\n          \"git commit*\"\n        ],\n        \"git_operations\": false,\n        \"dangerous_operations\": false\n      }\n    },\n    \"windsurf\": {\n      \"type\": \"async-orchestrator\",\n      \"enabled\": true,\n      \"config_file\": \".windsurfrules\",\n      \"rules_directory\": \".windsurf/rules/\",\n      \"config\": {\n        \"model\": \"claude-opus-4\",\n        \"max_context_tokens\": 12000,\n        \"response_timeout_seconds\": 300,\n        \"async_tasks\": true,\n        \"background_monitoring\": true\n      },\n      \"async_workflows\": [\n        {\n          \"name\": \"template-validation-pipeline\",\n          \"trigger\": \"file-change\",\n          \"pattern\": \"blueprints/**/*.{yml,toml}\"\n        },\n        {\n          \"name\": \"test-on-change\",\n          \"trigger\": \"file-change\",\n          \"pattern\": \"tests/**/*.test.ts\"\n        },\n        {\n          \"name\": \"cloudflare-integration-test\",\n          \"trigger\": \"manual\",\n          \"pattern\": \"**/*cloudflare*\"\n        }\n      ],\n      \"multi_agent_rules\": [\n        {\n          \"name\": \"template-builder.mdc\",\n          \"activation\": \"@windsurf-build or blueprints/**\",\n          \"max_size_chars\": 12000\n        },\n        {\n          \"name\": \"cloudflare-integration.mdc\",\n          \"activation\": \"@windsurf-cf or **/*cf*\",\n          \"max_size_chars\": 12000\n        }\n      ],\n      \"permissions\": {\n        \"file_read\": true,\n        \"file_write\": true,\n        \"command_execution\": true,\n        \"background_execution\": true,\n        \"notifications\": true,\n        \"git_operations\": false\n      }\n    }\n  },\n  \"unified_standards\": {\n    \"source_of_truth\": \"./AGENTS.md\",\n    \"version\": \"1.0.0\",\n    \"last_updated\": \"2025-12-24\",\n    \"coverage\": [\n      \"Universal coding standards\",\n      \"Naming conventions\",\n      \"Dokploy template structure\",\n      \"Cloudflare integration patterns\",\n      \"Testing requirements\",\n      \"Security boundaries\",\n      \"Git workflow\",\n      \"CLI commands\",\n      \"Permission model\"\n    ]\n  },\n  \"file_structure\": {\n    \"universal_standards\": \"./AGENTS.md\",\n    \"agent_configs\": {\n      \"claude\": \"./CLAUDE.md\",\n      \"cursor\": \"./CURSOR.md\",\n      \"copilot\": \"./COPILOT.md\",\n      \"cline\": \"./CLINE.md\",\n      \"windsurf\": \"./WINDSURF.md\"\n    },\n    \"multi_agent_orchestration\": \"./docs/MULTIAGENTPLAN.md\",\n    \"ai_exclusions\": \"./.aiignore\",\n    \"environment_template\": \"./.env.example\",\n    \"agent_service_config\": \"./ai-agent.config.json\",\n    \"cursor_workspace\": \"./.cursor/settings.json\",\n    \"cursor_rules\": \"./.cursor/rules/\",\n    \"windsurf_config\": \"./.windsurfrules\",\n    \"windsurf_rules\": \"./.windsurf/rules/\",\n    \"cline_rules\": \"./.clinerules\",\n    \"github_copilot\": \"./.github/copilot-instructions.md\"\n  },\n  \"security\": {\n    \"credentials_handling\": \"Environment variables only\",\n    \"allowed_env_vars\": [\n      \"CF_API_TOKEN\",\n      \"CF_ACCOUNT_ID\",\n      \"CF_ZONE_ID\",\n      \"CF_R2_ACCESS_KEY\",\n      \"CF_D1_DATABASE_ID\",\n      \"DOKPLOY_API_KEY\"\n    ],\n    \"forbidden_in_code\": [\n      \"Hardcoded credentials\",\n      \"API tokens\",\n      \"Database passwords\",\n      \"PII/sensitive data\"\n    ],\n    \"audit_logging\": true,\n    \"audit_directory\": \"./.audit/\"\n  },\n  \"quality_gates\": {\n    \"test_coverage\": \">80%\",\n    \"template_validation\": \"100% pass rate\",\n    \"staging_deployment\": \"Required before PR\",\n    \"cloudflare_integration\": \"API testing mandatory\",\n    \"documentation\": \"Complete for all templates\"\n  },\n  \"deployment\": {\n    \"environments\": [\"local\", \"staging\", \"production\"],\n    \"required_checks\": [\n      \"Template validation\",\n      \"Test coverage >80%\",\n      \"Staging deployment success\",\n      \"Human review approval\"\n    ]\n  },\n  \"support\": {\n    \"documentation\": \"https://docs.dokploy.com\",\n    \"cloudflare_api\": \"https://developers.cloudflare.com/api\",\n    \"github_issues\": \"https://github.com/enuno/dokploy/issues\",\n    \"discord\": \"https://discord.gg/dokploy\"\n  }\n}\n