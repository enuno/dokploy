:80 {
    # Health check endpoint
    handle /health {
        respond "OK" 200
    }

    # Route API requests to backend
    handle /api/* {
        reverse_proxy backend:8000
    }

    # Route all other requests to frontend
    handle {
        reverse_proxy frontend:8001
    }

    # Enable logging
    log {
        output stdout
        format console
        level INFO
    }
}
